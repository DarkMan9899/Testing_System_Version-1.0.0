<html charset='utf-8'>

<head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	<script src="../public/javascripts/validation.js"></script>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
		integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
	<script src="../public/javascripts/Home.js"></script>
	<script src="../public/javascripts/Registration.js"></script>
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	<link rel="stylesheet" href="../public/stylesheets/Home.css">
	<link rel="stylesheet" href="../public/stylesheets/Registration.css">
	<title>
	</title>
</head>


<body>
	<fieldset id="main">
		<span class="elem" id="log">Մուտք</span>
		<span class="elem" id="reg">Գրանցում</span><br>
	</fieldset>

	<fieldset id="login" style="display:none">

		<form method="POST" action="/">
			<div>
				<input type="text" id="username" class="form-control" placeholder="Մուտքանուն" name="username"
					autocomplete="off">
			</div>
			<div>
				<input type="password" class="form-control" placeholder="Գաղտնաբառ" name="password" autocomplete="off">
			</div>
			{{#if error}}
			<span id='error'>Սխալ մուտքանուն և/կամ գաղտնաբառ</span>
			<script>$('#login').show();</script>
			{{/if}}
			<div><button type="submit" id='log1' class="btn btn-primary">Մուտք</button></div>
		</form>
	</fieldset>

	<fieldset id="registration" style="display:none">
		<!--form id="registration1" method="POST" action="/registration"-->

		<div>
			<input type="text" class="form-control" placeholder="Անուն" id="fname" autocomplete="off">
			<span class="fname_error"></span>
		</div><br class='fname_error'>

		<div>
			<input type="text" class="form-control" placeholder="Ազգանուն" id="lname" autocomplete="off">
			<span class="lname_error"></span>
		</div><br class="lname_error">
		<div>
			<input type="text" class="form-control" placeholder="Հայրանուն" id="patr" autocomplete="off">
			<span class="patr_error"></span>
		</div><br class="patr_error">
		<div>
			<input type="text" class="form-control" placeholder="Ծնն. օր.ամիս.տարի" id="bday" autocomplete="off">
			<span class="bday_error"></span>
		</div><br class="bday_error">
		<div>
			<input type="text" class="form-control" placeholder="Խմբի համար" id="gnum" autocomplete="off">
			<span class="gnum_error"></span>
		</div><br class="gnum_error">

		<div>
			<input type="text" class="form-control" placeholder="Էլ. փոստ" id="email" autocomplete="off">
			<span class="email_error"></span>
		</div><br class="email_error">

		<div>
			<input type="password" class="form-control" placeholder="Գաղտնաբառ" id="pswd1" autocomplete="off">
			<span class="pswd1_error1"></span><br>
			<span class="pswd1_error2"></span><br>
			<span class="pswd1_error3"></span><br>
		</div><br class="pswd1_error1"><br><br class="pswd1_error2"><br> <br class="pswd1_error3"><br>
		<div>
			<input type="password" class="form-control" placeholder="Կրկնեք գաղտնաբառը" id="pswd2" autocomplete="off">
			<span class="pswd2_error"></span>
		</div><br class="pswd2_error">
		<div><button type="submit" id="reg1" class="btn btn-primary">Գրանցվել</button></div>
	</fieldset>
	<div id='dialog'>
		<span id='text' style="font-family: 'Merriweather', serif;"></span>
		<input type="text" id="code" style="visibility:hidden"><br>
		<button id="send">Հաստատել</button>
	</div>
	<div id='dialog2'>
		<span id='text2' style="font-family: 'Merriweather', serif;"></span>
		<button id="close">Փակել</button>
	</div>
</body>

</html>